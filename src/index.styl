body {
  background-color: white;
}

@font-face {
  font-family: "Gotham ";
  src: url("/assets/fonts/Gotham-Rounded-Book.ttf") format('truetype');
}

.modal {
  display: block;
  position: fixed;
  z-index: 1;
  padding-top: 170px;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgb(0, 0, 0);
  background-color: rgba(0, 0, 0, 0.4);
}

.centre-text {
  margin-top: 20%;
  text-align: center;
  font-size: 30px;
}

/* Modal Content */
.modal-content {
  background-color: #fefefe;
  margin: auto;
  padding: 20px;
  border: 1px solid #888;
  width: 30%;

  .header {
    margin: 1% 1% 5% 1%;
    font-size: 1.2em;
  }

  form {
    margin: 4% 1% 1% 1%;
    label {
      .user {
        margin-left: 33px;
      }

      input {
        margin-left: 20px;
        margin-bottom: 20px;
        padding: 5px;
        width: 60%;
        background: #ecebeb;
        border: 1px solid #b5b2b2;
        box-shadow: 1px 1px #d4d4d4;
      }

    }
    .search {
      padding: 4px;
      margin-top: 10px;
      width: 30%;
      height: 100%;
      margin-left: 31%;
      border: 1px solid #20B2AA;
      font-size: 1em;
      color: white;
      background: linear-gradient(#20B2AA, #278c87);
    }
  }
}

/* The Close Button */
.close {
  color: #aaaaaa;
  float: right;
  font-size: 20px;
}

.close:hover,
.close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

.artist-button {
  margin-left: 42%;
  padding: 8px;
  width: 200px;
  font-size: 20px;
  border: 1px solid #20B2AA;
  color: white;
  background: linear-gradient(#20B2AA, #278c87);
}

.result {
  .header {
    margin: 4%;
    .heading {
      float: left;
    }
    .clear {
      position: relative;
      top: 35px;
      color: #20B2AA;
      margin-left: 10px;
    }
  }
  .content {
    width: 600px;
    height: 100px;
    clear: both;
    margin: 4%;
    border-bottom: 1px solid #c3bdbd;
    color: darkgrey;
    .image {
      float: left;
      margin: 16px;
      width: 10%;
      img {
        border-radius: 50%;
        width: 60px;
        height: 60px;
      }
    }
    .description {
      margin: 10px;
      width: 80%;
      float: right;
      label {
        color: #848282;
      }
      span{
        padding:10px;
      }
      .long{
        height: 50px;
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
  }

}